   <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
 		xmlns:tools="http://schemas.android.com/tools"   
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".OffCampusActivity" >

	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="180dp"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Apartment" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Address" />

	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="110dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="City" />

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="74dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="State" />

	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="120dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Postal Code" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="105dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Telephone" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="120dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Studio Price" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Single Bedroom" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Double Bedroom" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="130dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Triple Bedroom" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="74dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Deposit" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="120dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Miles from SCU" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="74dp"
	            android:layout_height="wrap_content"
	            android:background="#00d2ff"
	            android:gravity="center"
	            android:text="Crd Ck" />
	    </LinearLayout>

	    <ListView
	        android:id="@+id/listView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView"
	        android:layout_below="@+id/textView"
	        android:layout_marginTop="200dp" >
	    </ListView>

	    <CheckBox
	        android:id="@+id/checkBox1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/button1"
	        android:layout_toRightOf="@+id/spinner1"
	        android:text="ASC" />

	    <CheckBox
	        android:id="@+id/checkBox2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/button1"
	        android:layout_toRightOf="@+id/checkBox1"
	        android:text="DESC" />

	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/spinner1"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="14dp"
	        android:text="Search for the Apartments:" 
	        android:textColor="#951816"/>

	    <Spinner
	        android:id="@+id/spinner2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/checkBox1"
	        android:layout_toLeftOf="@+id/checkBox1" />

	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/checkBox1"
	        android:layout_alignTop="@+id/spinner2"
	        android:layout_marginTop="14dp"
	        android:ems="6" />

	    <Button
	        android:id="@+id/button1"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/spinner1"
	        android:layout_toRightOf="@+id/checkBox2"
	        android:text="Search" />

	    <Spinner
	        android:id="@+id/spinner1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/linearLayout1"
	        android:layout_below="@+id/textView5"
	        android:layout_marginTop="21dp" />

	</RelativeLayout>

</HorizontalScrollView>