<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/apartment_text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:background="#e3dfd1"/>

    <TextView
        android:id="@+id/address_text"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/city_text"
        android:layout_width="110dp"
     	android:gravity="center"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        android:background="#e3dfd1"/>

    <TextView
        android:id="@+id/state_text"
        android:layout_width="74dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/postal_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e3dfd1"/>

    <TextView
        android:id="@+id/telephone_text"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/studio_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e3dfd1"/>
    
    <TextView
        android:id="@+id/onebedroom_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/twobedroom_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e3dfd1"/>
    
    <TextView
        android:id="@+id/threebedroom_text"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/deposit_text"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e3dfd1"/>
    
    <TextView
        android:id="@+id/miles_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/crd_ck_text"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#e3dfd1"/>
        
</LinearLayout>